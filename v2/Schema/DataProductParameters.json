{
   "$schema":"http://json-schema.org/draft-07/schema",
   "$id":"https://standards-ontotest.oftrust.net/v2/Schema/DataProductParameters",
   "type":"object",
   "title":"Data product core schema",
   "description":"Core schema for general data product.",
   "required":[
      "@context",
      "productCode",
      "timestamp",
      "parameters"
   ],
   "properties":{
      "@context":{
         "$id":"#/properties/@context",
         "type":"string",
         "title":"JSON-LD context url",
         "description":"JSON-LD context url with terms required to understand data product content.",
         "const":"https://standards-ontotest.oftrust.net/v2/Context/DataProductParameters/VehicleInformation/"
      },
      "productCode":{
         "$id":"#/properties/productCode",
         "type":"string",
         "title":"Productcode",
         "description":"Name of your product.",
         "examples":[
            "multidata-product-1"
         ]
      },
      "timestamp":{
         "$id":"#/properties/timestamp",
         "type":"string",
         "title":"Timestamp of the request",
         "description":"Timestamp of the request.",
         "examples":[
            "2019-10-19T13:20:09+00:00"
         ]
      },
      "parameters":{
         "$id":"#/properties/parameters",
         "type":"object",
         "title":"Data product parameters",
         "description":"Parameters of data product.",
         "additionalProperties":true,
         "required":[
            "operator",
            "vehicle"
         ],
         "properties":{
            "operator":{
               "$id":"#/properties/parameters/properties/operator",
               "type":"object",
               "title":"Operator",
               "description":"Operator of some object.",
               "required":[
                  "@type",
                  "idLocal"
               ],
               "properties":{
                  "@type":{
                     "$id":"#/properties/data/items/properties/measurements/items/properties/@type",
                     "type":"string",
                     "title":"Operator type",
                     "description":"Type of operator."
                  },
                  "idLocal":{
                     "$id":"#/properties/parameters/properties/operator/properties/idLocal",
                     "type":"string",
                     "title":"Local identifier",
                     "description":"Locally given identifier."
                  }
               }
            },
            "vehicle":{
               "$id":"#/properties/parameters/properties/vehicle",
               "type":"object",
               "title":"Vehicle",
               "description":"Vehicle.",
               "required":[
                  "@type",
                  "idLocal"
               ],
               "properties":{
                  "@type":{
                     "$id":"#/properties/data/items/properties/measurements/items/properties/@type",
                     "type":"string",
                     "title":"Operator type",
                     "description":"Type of operator."
                  },
                  "idLocal":{
                     "$id":"#/properties/parameters/properties/vehicle/properties/idLocal",
                     "type":"string",
                     "title":"Local identifier",
                     "description":"Locally given identifier."
                  }
               }
            }
         }
      }
   }
}