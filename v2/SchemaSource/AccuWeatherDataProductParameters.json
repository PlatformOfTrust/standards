{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "$ref": "#/definitions/RequestParameters",
  "definitions": {
    "Location": {
      "required": [
        "lat",
        "lng"
      ],
      "properties": {
        "lat": {
          "type": "number"
        },
        "lng": {
          "type": "number"
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "Params": {
      "required": [
        "timeFrame",
        "location"
      ],
      "properties": {
        "timeFrame": {
          "enum": [
            0,
            1,
            5,
            10,
            15
          ],
          "type": "integer",
          "description": "Defines the time frame for the forecast in days. If set to 0 will return the current weather information. Will fallback to 0 if not provided."
        },
        "location": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "$ref": "#/definitions/Location",
          "description": "The coordinates of the location that the forecast will be fetched. Will find the nearest weather station to this location."
        }
      },
      "additionalProperties": false,
      "type": "object"
    },
    "RequestParameters": {
      "required": [
        "@context",
        "timestamp",
        "product-code",
        "parameters"
      ],
      "properties": {
        "@context": {
          "type": "string",
          "description": "The context to be used for the payload."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time"
        },
        "product-code": {
          "type": "string"
        },
        "parameters": {
          "$schema": "http://json-schema.org/draft-04/schema#",
          "$ref": "#/definitions/Params"
        }
      },
      "additionalProperties": false,
      "type": "object"
    }
  }
}