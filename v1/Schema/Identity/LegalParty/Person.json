{
    "$schema": "http://json-schema.org/draft-07/schema",
    "type": "object",
    "properties": {
        "@context": {
            "type": "string",
            "minLength": 1,
            "const": "https://standards-ontotest.oftrust.net/v1/Context/Identity/LegalParty/Person/"
        },
        "@type": {
            "type": "string",
            "minLength": 1,
            "enum": [
                "Person"
            ],
            "const": "Person"
        },
        "metadata": {
            "title": "Metadata",
            "description": "Metadata container",
            "type": "object",
            "properties": {
                "createdBy": {
                    "title": "Creator",
                    "description": "Creator of and identity",
                    "type": "string"
                },
                "createdAt": {
                    "title": "Creation time",
                    "description": "Time when the data is created",
                    "type": "string"
                },
                "updatedBy": {
                    "title": "Updater",
                    "description": "Updater of an identity",
                    "type": "string"
                },
                "updatedAt": {
                    "title": "Update time",
                    "description": "Time when the data is updated",
                    "type": "string"
                }
            }
        },
        "data": {
            "title": "",
            "description": "",
            "type": "object",
            "properties": {
                "lastName": {
                    "title": "Last name",
                    "description": "Last name of the person",
                    "type": "string",
                    "examples": [
                        "Mölsä"
                    ]
                },
                "middleName": {
                    "title": "Middle names",
                    "description": "Middle names of the person",
                    "type": "string",
                    "examples": [
                        "Bengt"
                    ]
                },
                "firstName": {
                    "title": "First Name",
                    "description": "First name of the person",
                    "type": "string",
                    "examples": [
                        "Petri"
                    ]
                },
                "birthdate": {
                    "title": "Date of birth",
                    "description": "Birthdate of the person",
                    "type": "string",
                    "examples": [
                        "1977-04-21"
                    ]
                },
                "idOfficial": {
                    "title": "Identity number",
                    "description": "Official identifier of the person in Finland",
                    "type": "string",
                    "examples": [
                        22438613
                    ]
                },
                "status": {
                    "title": "Process status",
                    "description": "Life cycle status",
                    "type": "string"
                },
                "additionalInformation": {
                    "title": "Additional information",
                    "description": "Additional information",
                    "type": "string",
                    "examples": [
                        "Our laminated logs are glued from two or more planed blanks in a way that the heartwood will stay on the logs surface. This is done to ensure that cracking and bending stay minimal."
                    ]
                }
            }
        },
        "id": {
            "title": "",
            "description": "",
            "type": "string"
        }
    },
    "required": [
        "data",
        "id",
        "@context",
        "@type"
    ]
}