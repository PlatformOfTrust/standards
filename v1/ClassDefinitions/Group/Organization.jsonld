                "pot:description": {
                    "en-us": "Organization categorization given by official authority"
                },
                "pot:valueType": [
                    "xsd:string"
                ],
                "xsd:restriction": {
                    "xsd:base": "xsd:string",
                    "xsd:maxLength": "50"
                }
            },
            "description": {
                "@id": "pot:description",
                "@type": "pot:SupportedAttribute",
